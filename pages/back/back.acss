page{
    background: #f5f5f5;
}
.header{
    padding:20px 30rpx;background: #fff;display:flex;
}
.header>.img-wrapper{
    width:40px;background: #f5f5f5;margin-right:10px;text-align:center;
}
.header>.img-wrapper>image{
     width:40px;

}
.header>.header-left{
    flex:1;
}
.header>.header-left>.first{
    font-size:14px;color:#333;
}
.header>.header-left>.sec{
    font-size:12px;color:#999;margin-top:10px;
}


.list-wrapper{
    margin-top:10px;background: #fff;padding-left:30rpx;font-size:16px;
     border-bottom:1px solid #ddd;
    border-top:1px solid #ddd;font-size:16px;
}
.list-wrapper>.list{
    display:flex; border-bottom:1px solid #ddd;
    padding-right:30rpx;padding:15px 0;
}
.list-wrapper>.list>view:first-child{
    width:85px;
}
.list-wrapper>.list>view.select{
    flex:1;text-align:right;color:#999;position:relative;padding-right:30px;
}
.list-wrapper>.list2{
    line-height:45px;border-bottom:1px solid #ddd;display:flex;box-sizing: border-box;height:45px;
}
.list-wrapper>.list2>view:first-child{
    width:85px;
}
.list-wrapper>.list>view.select>image{
margin-left:15px;right:0;top:50%;margin-top:-10px;position:absolute
}
.list-wrapper>.list>view.fill>textarea{
    line-height:1;
}
.list-wrapper>.list2>view.fill>input{
    box-sizing: border-box;height:42px;
}
.list-wrapper>.list:last-child{
    border-bottom: none; vertical-align: middle;
}



























.pv-container{
    position:fixed;bottom:0;left:0;right:0;background: #fff;
    transform: translate3d(0,100%,0);transition:all .3s;z-index:5;
}
.pv-container.show{
    transform: translate3d(0,0,0)
}
.pv-container>view{
    flex:1;text-align:right;
}
.pv-container>view.title{
display:flex;padding:0 20rpx;font-size:15px;background: #fff;border-bottom:1px solid #eee;
}
.pv-container>view.title>view{
     text-align:right;flex:1;color:#00c0a3;line-height:35px;text-align:right;
}
.pv-container>view.title>view:first-child{
    text-align:left;color:#999;
}
.bg.showBg{
    display:block;z-index:3;
}
                            